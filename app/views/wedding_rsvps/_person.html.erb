<div class="white-wrap white-wrap-narrow">
  <h3><%=@name%></h3>

<div class="form-group">
  <%= label_tag :first_name %>
  <%= text_field_tag :first_name, '', class: 'form-control', placeholder: 'Willamund' %>
</div>
<div class="form-group">
  <%= label_tag :last_name %>
  <%= text_field_tag :last_name, '', class: 'form-control', placeholder: 'Lahurrie' %>
</div>
<div class="select-hide-group">
  <div class="form-group">
    <%= label_tag :attending %>
    <%= select_tag :attending, options_for_select([ ['--Choose--','choose'], ['Will be attending', 'yes'], ['Will not be attending', 'no']], selected: 'choose', disabled: 'choose'), class: 'form-control select-hide' %>
  </div>

  <div class="select-hide-content" data-select-hide-for="no" style="display:none;">
    <div class="form-group select-hide">
      <%= label_tag :message %>
      <%= text_area_tag :message, '', class: 'form-control', placeholder: 'add a message if you want to - this is optional!' %>
    </div>
  </div>
  <div class="select-hide-content"  data-select-hide-for="yes" style="display:none;">
    <div class="select-hide-group">
      <div class="form-group">
        <%= label_tag :size %>
        <%= select_tag :size, options_for_select([['-- Choose --','choose'],['Grown up', 'grown_up'], ['Child', 'child']], disabled: 'choose', selected: 'choose'), class: 'form-control select-hide' %>
      </div>

      <div class="form-group select-hide-content"  data-select-hide-for="child" style="display:none" />
      <%= label_tag :age %>
      <%= number_field_tag :age, '', class: 'form-control', placeholder: 100 %>
    </div>
  </div>
</div>
</div>
</div>