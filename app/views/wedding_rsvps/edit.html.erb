
<div class="white-wrap white-wrap-narrow">
  <h1>Who is coming?</h1>
</div>

<%= form_tag do %>
    <div class="people" data-people-count="<%=  @rsvp.people.length  %>">
    <% @rsvp.people.each do |person_id|
        @person = Person.find(person_id)%>
      <%=  render partial: 'person'%>
    <%end%>
    </div>

<% end %>

    <div class="white-wrap white-wrap-narrow">
      <%= link_to 'Add another person', '#', class: 'btn btn-default add-person' %>

      <%= link_to 'Finished', '#', class: 'btn btn-success' %>




</div>